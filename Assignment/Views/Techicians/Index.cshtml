@model IEnumerable<Assignment.Models.TechniciansModel>

<p>
    <a asp-action="InputForm">Create New</a>
    <a asp-action="Searchform">Search</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
               <a href="/Techicians/Edit/@item.id">Edit</a> |
                <a href="/Techicians/ShowDetails/@item.id">Show Details</a> |

                <a id="shw" href="/Techicians/Delete/@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
